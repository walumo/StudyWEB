
@{
    ViewData["Title"] = "Topics";
    List<StudyWEB.Models.Task> tasks = (List<StudyWEB.Models.Task>)ViewData["tasks"];
    List<Topic> topics = (List<Topic>)ViewData["topics"];
    List<Note> notes = (List<Note>)ViewData["notes"];
}

<!--Accordion to be populated with topics-->
<div class="text-center">
    <div class="accordion" id="topicsAccordion">
        @foreach (Topic topic in topics)
        {
            string gradient = "blueGradient";
            if (topic.TopicCompletionDate.CompareTo(DateTime.Now) > 0) gradient = "blueGradient";
            if (topic.TopicCompletionDate.AddHours(-topic.TopicEstimatedTimeToMaster).CompareTo(DateTime.Now) <= 0) gradient = "redGradient";
            if (topic.TopicInProgress) gradient = "greenGradient";

            int index = topics.IndexOf(topic);
            var taskBuffer = tasks.Where(x => x.TopicId == topic.TopicId).ToList();
            string details = "detailsOf" + topic.TopicId;
            <div class="card z-depth-0 bordered">
                <div class="card-header @gradient" id="@topic.TopicId">
                    <h5 class="mb-0">
                        <button class="btn" type="button" data-toggle="collapse" data-target="#@details" aria-expanded="true" aria-controls="@details">
                            <h1 class="text-light">@topic.TopicTitle</h1>
                            <p class="text-light">@topic.TopicDescription</p>
                        </button>
                    </h5>
                </div>
                <div id="@details" class="collapse" aria-labelledby="@topic.TopicId"
                     data-parent="#topicsAccordion">
                    <div class="card-body">
                        <dl>
                            <dt>Deadline:</dt>
                            <dd>@topic.TopicCompletionDate.ToLocalTime()</dd>
                        
                        
                            @foreach (StudyWEB.Models.Task task in topics[index].Tasks)
                            {
                                <dt>@task.TaskTitle</dt>

                                @foreach (Note note in notes.Where(x => x.TaskId == task.TaskId))
                                {
                                    <dd>@note.Note1</dd>
                                }
                            }
                        </dl>

                    </div>
                </div>
            </div>
           }
    </div>
</div>


